//TS옵션 설정
{
  "include": ["src"], // JS로 변환할 파일 지정
  "compilerOptions": {
    "outDir": "build", // 변환된 파일 경로
    "target": "ES6", // 변환할 JS버전
    "lib": ["ES6"], // JS가 실행되는 환경, 브라우저에서 작동시 "DOM"
    "strict": true, // 엄격한 모드
    "allowJs": true, // TS안에 JS를 허용, TS와 JS를 같이 사용
    "esModuleInterop": true, // ES6 모듈의 코드를 가져올시 문제 해결, ES6 모듈 사양 준수
    "module": "CommonJS" //브라우저라면 umd
  }
}
